@model IEnumerable<CoreLibrary.Models.CategoriaModel>

@{
    ViewData["Title"] = "Listado de Categorías";
}

<h1>Listado de Categorías</h1>

<p>
    <a asp-action="Create">Crear Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    @{
                        var tipoEstadoMap = new Dictionary<int, string>
                {
                { 1, "Activo" },
                { 0, "Inactivo" },
                };

                        int estadoKey = item.Estado ? 1 : 0;


                        string tipoEstadoText = tipoEstadoMap.ContainsKey(estadoKey)
                        ? tipoEstadoMap[estadoKey]
                        : "Tipo de Estado no registrado";
                    }
                    @tipoEstadoText
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategoria">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategoria">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategoria">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
