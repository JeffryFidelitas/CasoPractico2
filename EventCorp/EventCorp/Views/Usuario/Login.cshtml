@model CoreLibrary.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
	Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<!-- Inicio de Sesión -->
<div class="container-fluid">
    <div class="row min-vh-100 align-items-center justify-content-center">
        <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded-4 p-4 p-sm-5 shadow-lg">
                <div class="d-flex flex-column flex-sm-row align-items-center justify-content-between mb-4">
                    <a asp-action="Index" asp-controller="Home" class="text-decoration-none mb-3 mb-sm-0">
                        <h3 class="text-primary mb-0"><i class="fa fa-user-edit me-2"></i>DarkPan</h3>
                    </a>
                    <h4 class="text-light mb-0">Iniciar Sesión</h4>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    var generalErrors = ViewData.ModelState[string.Empty]?.Errors;
                    if (generalErrors != null && generalErrors.Count > 0)
                    {
                        <div class="alert alert-primary alert-dismissible fade show py-2 px-3 small d-flex align-items-center" role="alert">
                            <i class="fa fa-exclamation-circle me-2 fs-5"></i>
                            <div class="flex-grow-1">@generalErrors[0].ErrorMessage</div>
                            <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                }

                <form asp-action="Login" method="post">
                    <div class="form-floating mb-3">
                        <input type="email" asp-for="Correo" class="form-control" id="floatingInput" placeholder="Correo electrónico">
                        <label asp-for="Correo">Correo electrónico</label>
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="password" asp-for="Contrasena" class="form-control" id="floatingPassword" placeholder="Contraseña">
                        <label asp-for="Contrasena">Contraseña</label>
                        <span asp-validation-for="Contrasena" class="text-danger small"></span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label text-light" for="rememberMe">Recuérdame</label>
                        </div>
                        <a href="#" class="text-decoration-none small text-primary">¿Olvidaste tu contraseña?</a>
                    </div>

                    <button type="submit" class="btn btn-primary py-3 w-100 mb-3">Ingresar</button>

                    <p class="text-center text-light small mb-0">
                        ¿No tienes una cuenta? <a href="#" class="text-primary text-decoration-none">Regístrate</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Fin de Inicio de Sesión -->